
.avatar{
  height: 400rpx;
  background: #f60;
  display: flex;
  justify-content: center;
  align-items: center;
}
.avatar image{
  width: 200rpx;
  height: 200rpx;
  border: 10rpx solid rgba(0,0,0,.3);
  border-radius: 50%;
}
/*列表*/
.cell{
  width: 100%;
  background: #fff;
  font-size: 16px;
}
.cell .cell-item{
  border-bottom: 1rpx solid #ddd;
  padding:20rpx 30rpx;
}
/*箭头*/
.arrow{
  display: flex;
  justify-content: space-between;/*两端对齐*/
  align-items: center;   
}
.arrow::after{
  content: "";
  width: 20rpx;
  height: 20rpx;    
  border-top: 1px solid #ccc;
  border-right: 1px solid #ccc;   
  transform: rotate(45deg);
}