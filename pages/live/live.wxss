/* pages/live/live.wxss */
.card{
    width: 100%;
    box-sizing: border-box;
}
.card .card-item{
    width: 100%;
    border-bottom: 1rpx solid #ccc;
}
.card-item .radio-group{
    height: 100rpx;
    line-height: 100rpx;
    box-sizing: border-box;
    padding-left: 20rpx;
    font-size: 14px;
    border-bottom: 1rpx solid #ccc;
}
.card-item .item-nr{
    height: 320rpx;
    line-height: 300rpx;
    display: flex;
    align-items:flex-start;
}

.item-nr .nr-cont{
    padding-left: 20rpx;
    display: flex;
    font-size: 12px;
    line-height: 18px;
}
.nr-cont image{
    width: 250rpx;
    height: 280rpx;
    margin-top: 20rpx;
    border-radius: 10px;
}
.nr-cont .cont-cell{
    width: 480rpx;
    height: 320rpx;
    display: flex;
    flex-direction: column;
}

.cont-cell .t1{
    padding-top: 20rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
    word-wrap:break-word;
    overflow: hidden;
}
.cont-cell .t2{
    padding-left: 20rpx;
    padding-top: 15rpx;
    color: #666;
    font-size: 12px;
}
.cont-cell .v3{
    padding-left: 20rpx;
    padding-top: 110rpx;
    font-size: 16px;
}
.cont-cell .v3 .v3-t1{
    margin-right: 20rpx;
}
.cont-cell .v3 .v3-t2{
    text-decoration: line-through;
    font-size: 12px;
    color: #666;
    margin-right: 240rpx;
}
.cont-cell .v3 .v3-t3{
    font-size: 12px;
    color: #666;
}
.card-item:last-child{
    margin-bottom: 100rpx;
}
